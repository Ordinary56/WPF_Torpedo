<Window x:Class="WPF_Torpedo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Torpedo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontSize="24" FontWeight="Bold" Text="Battleship Game" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <Button Name="StartGameButton" Content="Start Game" Width="200" Height="40" Click="StartGameButton_Click" Margin="0,5"/>
            <Button Name="InstructionsButton" Content="Instructions" Width="200" Height="40" Click="InstructionsButton_Click" Margin="0,5"/>
            <Button Name="ExitButton" Content="Exit" Width="200" Height="40" Click="ExitButton_Click" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>
